{{!--
Це код container файлу для template-6 сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/template-6"
--}}

<header class="header">
	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		{{#with checkbox}}
		<div class="form_checkbox">
			<input type="checkbox" name="{{name}}" id="{{name}}" />
			<div></div>
			<label for="{{name}}">{{label}}</label>
		</div>
		{{/with}}

		<div class="form_button_container">
			<button type="submit" class="form_button">{{button}}</button>
		</div>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

{{#with updates}}
<div class="updates">
	<h1 class="updates_title">{{title}}</h1>

	{{#each list}}
	<div class="upd">
		<div class="upd_image"></div>
		<div class="upd_info">
			<strong class="upd_nickname">@{{nickname}}</strong>
			<p class="upd_description">{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="{{url}}" class="updates_link">{{text}}</a>
	{{/with}}
</div>
{{/with}}



<div class="expirience">
	{{#with expirience}}
	<h2 class="exp_title">{{title}}</h2>

	<div class="exp_list_comtainer">
		{{#each list}}
		<div class="exp_list">
			<strong class="exp_list_name">{{name}}</strong>
			<p class="exp_list_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}

	<div class="hot">hot!</div>
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>

